# filemanager
filemanager=thunar %arg

# default action
stdaction=xterm -e nvim +%num %arg

# web browser
browser=links2 -g %arg

# manpages
manpage=xterm -e "man %sec %arg | less +%numG"


# C header directories (for arm, gcc 8)
idir=/usr/include/arm-linux-gnueabihf/
idir=/usr/lib/gcc/arm-linux-gnueabihf/8/include/
idir=/usr/lib/gcc/arm-linux-gnueabihf/8/include-fixed/


# regex
regex=.+\.(pdf|djvu|ps)
command=zathura -P %num %arg > /dev/null

regex=.+\.(jpg|png|gif|tiff)
command=sxiv %arg

regex=.+\.(mp3|wav)
command=audacious %arg

regex=.+\.(webm|mp4)
command=vlc --start-time %num file://%arg > /dev/null


# extensions
ext=epub
command=xterm -e mupdf %arg

ext=kdbx
command=keepassx %arg


# domain
domain=www.youtube.com
command=xterm -e youtube-dl -f 18 -o '/home/pi/VÃ­deos/%(title)s.%(ext)s' %arg

